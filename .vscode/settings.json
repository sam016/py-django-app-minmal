{
    "python.linting.pylintEnabled": true,
    "python.linting.enabled": true,
    "python.linting.pylintPath": "${workspaceFolder}/venv/bin/pylint --load-plugins pylint_django",
    "search.exclude": {
        "**/venv": true,
        "**/__pycache__": true,
        "**/staticfiles": true
    },
    "files.exclude": {
        "**/__pycache__": true,
        "**/staticfiles": true,
        "**/venv": true
    },
    "python.pythonPath": "venv/bin/python",
    "python.formatting.provider": "autopep8"
}